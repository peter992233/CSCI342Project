<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.peter.csci342_groupproject.UpgradesActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upgrades"
        android:id="@+id/Heading"
        android:textSize="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lives"
        android:id="@+id/LivesText"
        android:gravity="right"
        android:layout_below="@+id/Currency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:width="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weapon Damage"
        android:id="@+id/DamageText"
        android:gravity="right"
        android:layout_below="@+id/LivesText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:width="110dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Movement Speed"
        android:id="@+id/SpeedText"
        android:gravity="right"
        android:layout_below="@+id/DamageText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:width="110dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Lives1"
        android:background="#ff1700"
        android:layout_alignTop="@+id/LivesText"
        android:layout_toRightOf="@+id/LivesText"
        android:layout_toEndOf="@+id/LivesText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Lives2"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/LivesText"
        android:layout_toRightOf="@+id/Lives1"
        android:layout_toEndOf="@+id/LivesText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Lives3"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/LivesText"
        android:layout_toRightOf="@+id/Lives2"
        android:layout_toEndOf="@+id/LivesText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Lives4"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/LivesText"
        android:layout_toRightOf="@+id/Lives3"
        android:layout_toEndOf="@+id/LivesText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Lives5"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/LivesText"
        android:layout_toRightOf="@+id/Lives4"
        android:layout_toEndOf="@+id/LivesText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy A Life ($2000)"
        android:id="@+id/BuyLife"
        android:textSize="10dp"
        android:layout_alignTop="@+id/LivesText"
        android:layout_toRightOf="@+id/Lives5"
        android:layout_toEndOf="@+id/LivesText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-10dp"
        android:width="175dp"/>/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Damage1"
        android:background="#ff1700"
        android:layout_alignTop="@+id/DamageText"
        android:layout_toRightOf="@+id/DamageText"
        android:layout_toEndOf="@+id/DamageText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Damage2"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/DamageText"
        android:layout_toRightOf="@+id/Damage1"
        android:layout_toEndOf="@+id/DamageText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Damage3"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/DamageText"
        android:layout_toRightOf="@+id/Damage2"
        android:layout_toEndOf="@+id/DamageText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Damage4"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/DamageText"
        android:layout_toRightOf="@+id/Damage3"
        android:layout_toEndOf="@+id/DamageText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Damage5"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/DamageText"
        android:layout_toRightOf="@+id/Damage4"
        android:layout_toEndOf="@+id/DamageText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Damage($10000)"
        android:id="@+id/BuyDamage"
        android:textSize="10dp"
        android:layout_alignTop="@+id/DamageText"
        android:layout_toRightOf="@+id/Damage5"
        android:layout_toEndOf="@+id/DamageText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-10dp"
        android:width="175dp"/>/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Speed1"
        android:background="#ff1700"
        android:layout_alignTop="@+id/SpeedText"
        android:layout_toRightOf="@+id/SpeedText"
        android:layout_toEndOf="@+id/SpeedText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Speed2"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/SpeedText"
        android:layout_toRightOf="@+id/Speed1"
        android:layout_toEndOf="@+id/SpeedText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Speed3"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/SpeedText"
        android:layout_toRightOf="@+id/Speed2"
        android:layout_toEndOf="@+id/SpeedText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Speed4"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/SpeedText"
        android:layout_toRightOf="@+id/Speed3"
        android:layout_toEndOf="@+id/SpeedText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/Speed5"
        android:background="#ca4b4d48"
        android:layout_alignTop="@+id/SpeedText"
        android:layout_toRightOf="@+id/Speed4"
        android:layout_toEndOf="@+id/SpeedText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Speed($5000)"
        android:id="@+id/BuySpeed"
        android:textSize="10dp"
        android:layout_alignTop="@+id/SpeedText"
        android:layout_toRightOf="@+id/Speed5"
        android:layout_toEndOf="@+id/SpeedText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-10dp"
        android:width="175dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Currency"
        android:layout_below="@+id/Heading"
        android:layout_centerHorizontal="true"
        android:text="Curreny: $2000" />


</RelativeLayout>
